<%- include("../a-partials/a-header") -%>
<link rel="stylesheet" href="/css/admin/viewUser.css">

</head>
<body>


<div class="row">
    <div class="col-lg-2  col-md-3 sidebar " id="sticky-sidebar">
        <div class="sticky-top">
            <h2>Election Management System</h2>
        <div>
            <a href="/admin">
                <h5>Dashboard</h5>
            </a>
            <a href="/admin/users">
                <h5 class="active">Voters</h5>
            </a>
            <a href="/admin/moderator">
                <h5>Moderators</h5>
              </a>
            <a href="/admin/party">
                <h5>Party</h5>
            </a>
            <a href="/admin/wards">
                <h5>Wards</h5>
              </a>
            <a href="/admin/result">
                <h5>Result</h5>
            </a>
            <a href="/admin/vote-log">
                <h5 >Vote Log</h5>
              </a>
              <form action="/logout/admin" method="POST">
                <input type="submit" value="Logout" class="btn btn-lg btn-primary" name="" id="">
              </form>
        </div>
        </div>
        

    </div>
    <div class="col-lg-10 col-md-9 bar content">
        <% if(message !== "") {  %>
            <h6><%- message.value %></h6>
        <%  } %>
        <div class="view-user-outline">
            <h2 style="color:#007bff">Voter Details</h2>
            <div class="form-div">
                <div class="form-object">
                    <h5 class="display-box">Voter Id: <%- voter.voter_id %> </h5>
                </div>
                <div class="form-object">
                    <h5 class="display-box">Name    : <%- voter.fname.toUpperCase() %> <%- voter.lname.toUpperCase() %> </h5>
                </div>
            </div>
            <div class="form-div">
                <div class="form-object">
                    <h5 class="display-box">Gender  : <%- voter.gender.toUpperCase() %> </h5>
                </div>
                <div class="form-object">
                    <h5 class="display-box">Age     : <%- voter.age %> </h5>
                </div>
            </div>
            <div class="form-div">
                <div class="form-object">
                    <h5 class="display-box">Address : <%- voter.address.toUpperCase() %> </h5>
                </div>
                <div class="form-object">
                    <h5 class="display-box">Ward    : <%- voter.ward_id %> </h5>
                </div>
            </div>
            <div class="form-div">
                <div class="form-object">
                    <img src="http://localhost:3000/uploads/<%= image %>" style="width: 200px; height:200px; box-shadow: 0 0 10px gray;" alt="profile">
                </div>
                <div class="form-object">
                    <div class="form-object-item">
                        <h5 class="display-box">Phone : <%- voter.phone %> </h5>
                    </div>
                    <div class="form-object">
                        <form action="/admin/update-user" method="POST">
                            <input type="hidden" name="voter_id" value="<%- voter.voter_id %>">
                            <input class="btn btn-outline-primary" type="submit" value="Update Voter">
                        </form>
                    </div>
                    <div class="form-object">
                        <form action="/admin/dell-user" method="POST">
                            <input type="hidden" name="voter_id" value="<%- voter.voter_id %>">
                            <input class="btn btn-outline-danger" type="submit" value="Delete Voter">
                        </form>
                    </div>
                </div>
            </div>
        
        </div>
        
    </div>
</div>



<%- include("../a-partials/a-footer") -%>