<%- include("m-partials/m-header") -%>

<div class="row">
    <div class="col-lg-2  col-md-3 sidebar" id="sticky-sidebar">
      <div class="sticky-top">
        <h2>Election Management System</h2>
      <div>
        <a href="/moderator/<%- m_id.m_id %> ">
          <h5 class="active">Users</h5>
        </a>
        <a href="/login">
          <h5>Logout</h5>
        </a>
      </div>
      </div>
    </div>
                                     
    <div class="col-lg-10 col-md-9 bar content" id="main">
      <% if(message !== "") { %>
        <p><%- message.value %><br>
      <% } %> 
      <a href="/moderator/<%- m_id.m_id %>/add-user" class="btn btn-success">ADD VOTER</a>
      <table class="table" style="text-align: center;">
        <thead>
          <tr class="table-primary">
            <th scope="col">Voter id</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Ward id</th>
            <th scope="col">View user</th>            
          </tr>
        </thead>
        <tbody>
          <% voters.forEach(function (voter) { %> 
          <tr>
            <th scope="row"><%- voter.voter_id %> </th>
            <td><%- voter.fname %> <%- voter.lname %> </td>
            <td><%- voter.age %> </td>
            <td><%- voter.ward_id %> </td>
            <td><a href="/admin/users/<%- voter.voter_id %>" style="color:blueviolet">view user</a></td>
          </tr>
        <% }) %> 
        </tbody>
      </table>
    </div>
  </div>

<%- include("m-partials/m-footer") -%>